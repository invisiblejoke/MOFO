<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="161px"
            android:id="@+id/sSpace"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvName"
            android:text="FnB Outlet Name"
            android:layout_below="@+id/sSpace"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            /> />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPic"
            android:scaleType="center"
            android:layout_below="@+id/sSpace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivLikePic"
            android:layout_alignTop="@+id/tvLike"
            android:layout_alignBottom="@+id/tvLike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvLike"
            android:text="Likes :"
            android:layout_alignTop="@+id/tvLikeCount"
            android:layout_toEndOf="@+id/ivLikePic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvLikeCount"
            android:text="not available"
            android:layout_marginTop="290dp"
            android:layout_below="@+id/sSpace"
            android:layout_toEndOf="@+id/tvLike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvShortInfo"
            android:text="Infomation: not available"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvLikeCount"
            android:layout_alignParentStart="true" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bBookmark"
            android:text="Bookmark"
            android:layout_marginTop="47dp"
            android:layout_below="@+id/tvLikeCount"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bNextPost"
            android:text="NextPost"
            android:layout_below="@+id/bBookmark"
            android:layout_toStartOf="@+id/bBookmark" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bMoreInfo"
            android:text="More Info"
            android:layout_below="@+id/bBookmark"
            android:layout_toEndOf="@+id/bBookmark" />




    </RelativeLayout>

</FrameLayout>
