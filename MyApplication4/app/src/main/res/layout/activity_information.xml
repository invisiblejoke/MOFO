<?xml version="1.0" encoding="utf-8"?>





<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.home.myapplication.InformationActivity">


    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:id="@+id/sInfoSpace"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:longClickable="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvInfoName"
        android:text="FnB Outlet Name"
        android:layout_below="@+id/sInfoSpace"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivInfoPic"
        android:scaleType="center"
        android:layout_below="@+id/sInfoSpace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />




    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivInfoLikePic"
        android:layout_alignTop="@+id/tvLikeLabel"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvLikeLabel"
        android:text="Likes :"
        android:layout_below="@+id/sInfoSpace"
        android:layout_marginTop="290dp"
        android:layout_alignEnd="@+id/tvAddressLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvInfoLike"
        android:text="Not Available"
        android:layout_alignTop="@+id/tvLikeLabel"
        android:layout_toEndOf="@+id/tvLikeLabel" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvPhoneLabel"
        android:text="Contect No :"
        android:layout_below="@id/tvInfoLike"
        android:layout_alignTop="@+id/tvInfoPhone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvInfoPhone"
        android:text="Not Available"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvInfoLike"
        android:layout_toEndOf="@+id/tvPhoneLabel" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvAddressLabel"
        android:text="Address :"
        android:layout_below="@id/tvPhoneLabel"
        android:layout_alignTop="@+id/tvInfoAdd"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvInfoAdd"
        android:text="FnB Outlet Address"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvInfoPhone"
        android:layout_toEndOf="@+id/tvAddressLabel"/>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvWebLabel"
        android:text="Website :"
        android:layout_below="@id/tvAddressLabel"
        android:layout_alignTop="@+id/tvInfoWebsite"
        android:layout_alignParentStart="true" /> />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvInfoWebsite"
        android:text="Not Available"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvInfoAdd"
        android:layout_toEndOf="@+id/tvWebLabel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bInfoBookmark"
        android:text="unbookmark"
        android:layout_below="@+id/tvInfoWebsite"
        android:layout_centerHorizontal="true"
         />


</RelativeLayout>
</ScrollView>